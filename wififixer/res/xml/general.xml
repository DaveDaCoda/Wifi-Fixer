<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Service Preferences">

        <PreferenceScreen
                android:title="@string/phone_ui_tutorial"
                summary="Begins a small tutorial on the app's user interface"
                >
            <intent
                    android:targetPackage="org.wahtod.wififixer"
                    android:targetClass="org.wahtod.wififixer.ui.MainActivity">
                <extra
                        android:name="RUN_TUTORIAL"
                        android:value="pi">
                </extra>
            </intent>

        </PreferenceScreen>

        <CheckBoxPreference
                android:key="Disable"
                android:title="Disable Service"
                android:summary="Causes the Wifi Fixer service to stop running"/>

        <ListPreference
                android:title="@string/Perf_Mode_title"
                android:defaultValue="1"
                android:summary="@string/Perf_Mode_summary"
                android:key="Perf_Mode"
                android:entries="@array/entries"
                android:entryValues="@array/entryValues"/>
    </PreferenceCategory>

</PreferenceScreen>
